{
    "tasks": [
        {
            "type": "shell",
            "label": "configure",
            "command": "cmake",
            "args": [
                "-B",
                "build/arm64-v8a",
                "-S",
                ".",
                "-G",
                "Ninja",
                "-DCMAKE_SYSTEM_VERSION:STRING=24",
                "-DANDROID_NATIVE_API_LEVEL:STRING=24",
                "-DANDROID_ABI:STRING=arm64-v8a",
                "-DANDROID_PLATFORM:STRING=android-24",
                "-DCMAKE_EXPORT_COMPILE_COMMANDS=ON",
                "-DCMAKE_SYSTEM_NAME=Android",
                "-DANDROID_NDK:STRING=$env:NDK_HOME",
                "-DCMAKE_TOOLCHAIN_FILE:STRING=$env:NDK_HOME/build/cmake/android.toolchain.cmake",
                ""
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "detail": "cmake configure"
        },
        {
            "type": "shell",
            "label": "generate",
            "command": "cmake",
            "args": [
                "--build",
                "build/arm64-v8a",
                "--config",
                "Release",
                "--",
                "-j",
                "8"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn": "configure",
            "detail": "cmake build"
        },
        {
            "type": "shell",
            "label": "push",
            "detail": "push binary to device",
            "isBackground": true,
            "group": "test",
            "command": "adb",
            "args": [
                "push",
                "build/arm64-v8a/UnityInjector",
                "/data/local/tmp"
            ],
        },
        {
            "type": "shell",
            "label": "chmod",
            "detail": "chmod binary",
            "isBackground": true,
            "group": "test",
            "command": "adb",
            "args": [
                "shell",
                "chmod",
                "+x",
                "/data/local/tmp/UnityInjector"
            ],
        },
        {
            "type": "shell",
            "label": "run",
            "detail": "run binary",
            "isBackground": false,
            "group": "test",
            "command": "adb",
            "args": [
                "shell",
                "/data/local/tmp/UnityInjector"
            ],
            "dependsOn": [
                "generate",
                "push",
                "chmod"
            ],
            "dependsOrder": "sequence"
        }
    ],
    "version": "2.0.0"
}